<h1>Edit Review Form</h1>
<%= form_for [@product, @review] do |f| %>
  <% if @review.errors.present? %>
    <p>
      <%= @review.errors.full_messages.join(', ') %>
    </p>
  <% end %>

  <div>
    <p> Comments:<%= f.text_area :body %></p>
    <p> Rating: <%= f.number_field :rating , in:1..5 %></p>
  </div>

  <%= f.submit %>
<% end %>
<hr>
